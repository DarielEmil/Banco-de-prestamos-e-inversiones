                 <p>Nombre del usuario</p>
                 <ul>
                     <li>
                        <a href="@Url.Action("Index","Home")">
                            <img src="~/img/Home-Index.svg"/><span>Index</span>
                        </a>
                     </li>
                      <li>
                        <a href="#">
                            <img src="~/img/Loans.svg"/><span>Loans</span>
                        </a>
                      </li>
                      <li>
                        <a href="#">
                            <img src="~/img/Investment.svg"/><span>Investment</span>
                        </a>
                      </li>
                      <li>
                          <a href="@Url.Action("MyProfile","Home")">
                            <img src="/img/apps-line.svg"/><span>My Profile</span>
                          </a>
                      </li>
                 </ul>
            </div>
        </div>
        <div class="header">
            <a href=@Url.Action("SignOut","Login")>Sign Out</a>
        </div>
        <div class="container">
            <div class="title">
                <h2>My Profile</h2>
                <span></span>
            </div>
            <form class="formbox">
                <div class="textboxes">
                    <input id="inptName" name="name" type="text" maxlength="100" placeholder="Name" required />
                    <label id="lblName" for="name">Name</label>

                    <input id="inptLast" name="lname" type="text" maxlength="100" required />
                    <label id="lblLast" for="lname">Last Name</label>

                    
                    <input id="inptMail" name="email" type="email" maxlength="100" autocomplete="off" required />
                    <label id= "lblMail" for="email">Email</label>
                </div>
                <div class="textboxes">
                    <input id="inptID" name="id" type="text" maxlength="13" minlength="13" required />
                    <label id="lblID" for="id">ID</label>

                    <input id="inptLocat" name="location" type="text" required />
                    <label id="lblLocat" for="location">Location</label>

                    <input id="inptNum" name="phone" type="tel" maxlength="12" minlength="12" required />
                    <label id="lblNum" for="phone">Phone Number</label>
                </div>
                <div class="textboxes">
                    <input id="inptPass" name="password" type="password" maxlength="100" required />
                    <label id="lblPass" for="password">Password</label>
                    
                    <input id="inptSect" name="securityq" type="text" required />
                    <label id="lblSect" for="securityq">Security Question</label>
                </div>
                <div class="btnsubmit">
                    <input id="subtmit" type="submit" value="Save changes" />
                    <button id="btnmacc">Manage Account</button>
                </div>
            </form>
            <div class="footer">
            </div>
        </div>
    </body>
</html>