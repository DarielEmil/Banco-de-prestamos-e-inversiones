                  <input class="input_box" name="lfeedate" type="date" autocomplete="off" placeholder="Fee Date" required />
                </div>
                <div class="textboxes">
                  <label for="garant">Financial Guarantee: </label> 
                  <button class ="guarantor">Guarantor</button>
                  <button class="guarantee">Guarantee</button>
                </div>
                <!--fiador-->
                <div class="textboxes">
                  <input name="id" type="text" maxlength="13" minlength="13" placeholder="Guarantor ID" required />
                  <!--Readonly del nombre del fiador-->
                  <input name="fullname" type="text" maxlength="200" placeholder="Guarantor's Full Name" readonly required />
                </div>
                <!--garantia-->
                <div class="textboxes">
                  <select id="objtype" required>
                    <option value="" disabled selected>Type</option>
                    <option value="Mortgage">Mortgage</option>
                    <option value="Appliance">Appliance</option>
                    <option value="Vehicle">Vehicle</option>
                    <option value="Others">Others</option>
                  </select>
                        <input class="input_box" name="value" type="number" min="1" autocomplete="off" placeholder="Value" required />
                </div>
                <div class="textboxes">
                  <input name="location" type="text" placeholder="Location" required />
                        <select id="pmethod" required>
                            <option value="" disabled selected>Payment Method</option>
                            <option value="Check">Check</option>
                            <option value="Bank deposit">Bank deposit</option>
                            <option value="Direct transfer">Direct transfer</option>
                        </select>
                </div>
                <div class="btnsubmit">
                  <input type="submit" value="New Loan" />
                </div>
              </form>
